{
    "name": "hechoenlaravel/jarvis-platform",
    "description": "Platform for building modular applications",
    "keywords": ["JarvisApp", "Laravel Framework", "business platform"],
    "license" : "MIT",
    "type": "project",
    "require": {
        "php": ">=5.5.9",
        "laravel/framework": "5.1.*",
        "hechoenlaravel/jarvis-foundation": "dev-master"
    },
    "require-dev": {
        "fzaninotto/faker": "~1.4",
        "mockery/mockery": "0.9.*",
        "phpunit/phpunit": "~4.0",
        "phpspec/phpspec": "~2.1",
        "pingpong/sky": "~2.1",
        "pingpong/modules": "~2.1",
        "joselfonseca/laravel-admin" : "0.4.*",
        "prettus/l5-repository": "2.1.*",
        "prettus/laravel-validation" : "1.1.*",
        "league/fractal" : "0.12.*"
    },
    "autoload": {
        "classmap": [
            "database"
        ],
        "psr-4": {
            "JarvisPlatform\\": "app/",
            "Modules\\": "modules/"
        }
    },
    "autoload-dev": {
        "classmap": [
            "tests/TestCase.php"
        ],
        "psr-4": {
            "Joselfonseca\\LaravelAdmin\\" : "packages/joselfonseca/laravel-admin/src",
            "Hechoenlaravel\\JarvisFoundation\\" : "packages/hechoenlaravel/jarvis-foundation/src"
        }

    },
    "scripts": {
        "post-install-cmd": [
            "php artisan clear-compiled",
            "php artisan optimize"
        ],
        "pre-update-cmd": [
            "php artisan clear-compiled"
        ],
        "post-update-cmd": [
            "php artisan optimize"
        ],
        "post-root-package-install": [
            "php -r \"copy('.env.example', '.env');\""
        ],
        "post-create-project-cmd": [
            "php artisan key:generate"
        ]
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "config": {
        "preferred-install": "dist"
    }
}
